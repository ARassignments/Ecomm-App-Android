<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.AddNewAddressActivity"
    style="@style/screenBgTwo"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/back"
            android:layout_marginRight="10dp"
            style="@style/iconColor"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Address"
            android:fontFamily="@font/urbanist_bold"
            android:textSize="28sp"
            android:layout_weight="1"
            style="@style/textColor"/>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/mapImage"
            android:scaleType="matrix"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="160dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/map_pointer"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimage"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="8dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/testimg"
                app:civ_border_width="3dp"
                app:civ_border_color="@color/white"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom"
            style="@style/borderRadiusTop"
            android:layout_marginBottom="-1dp"
            android:layout_marginLeft="-1dp"
            android:layout_marginRight="-1dp">

            <LinearLayout
                android:layout_width="35dp"
                android:layout_height="4dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/small_handle"
                style="@style/strokeBgColor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Address Details"
                android:fontFamily="@font/urbanist_bold"
                android:textSize="24sp"
                style="@style/textColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/line_shape"
                android:layout_marginVertical="15dp"
                style="@style/strokeBgColor"/>

            <Button
                android:id="@+id/addBtn"
                android:text="Add"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                style="@style/EcommButton"/>


        </LinearLayout>


    </FrameLayout>


</LinearLayout>