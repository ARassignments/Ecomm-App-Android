<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.GetStartedActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/welcome"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome To ðŸ‘‹"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ecomm"
            android:textColor="@color/myTheme"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginTop="-15dp"
            android:fontFamily="@font/poppins_bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The best plant e-commerce &amp; online store app of the century for your need!"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginTop="-10dp"
            android:fontFamily="@font/poppins_regular"/>

        <Button
            android:id="@+id/btnStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Started"
            android:backgroundTint="@color/myTheme"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingTop="12dp"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="20dp"/>

    </LinearLayout>


</FrameLayout>